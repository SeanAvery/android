<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/volleyball_image"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/utvolleyball"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volleyball_text"
        android:layout_toRightOf="@id/volleyball_image"
        android:text="@string/vollyText"
        android:textSize="40dp"
        android:textColor="#000000"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/football_image"
        android:layout_below="@id/volleyball_image"
        android:layout_marginRight="10dp"
        android:src="@drawable/utfootball"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/football_text"
        android:layout_below="@id/volleyball_image"
        android:layout_toRightOf="@id/football_image"
        android:text="@string/footballText"
        android:textSize="40dp"
        android:textColor="#000000"/>

</RelativeLayout>
